<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu.Options">

    <LinearLayout
        android:id="@+id/layout_activity_options"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/backgroundrose"
        android:weightSum="1"
        >

        <!-- Header -->
        <LinearLayout
            android:id="@+id/options_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.1"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="OPCIONES"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/delvue"
                android:textSize="32dp"
                >

            </TextView>


        </LinearLayout>

        <!-- Body options-->
        <LinearLayout
            android:id="@+id/options_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:weightSum="1"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_weight="0.1"
                >

                <TextView
                    android:id="@+id/txtOpcionesCronometro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="DURACIÃ“N CRONOMETRO"
                    android:textSize="32dp"
                    android:fontFamily="@font/delvue"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_editarTiempoTimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:fontFamily="@font/delvue"
                    android:textSize="16dp"
                    android:text="EDITAR" />




            </LinearLayout>

        </LinearLayout>

        <!-- Body empty space-->

        <LinearLayout
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.1"

            >



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_restablecer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/delvue"
                android:gravity="center"
                android:textSize="16dp"
                android:text="RESTABLECER" />
        </LinearLayout>


    <!-- Footer -->
        <LinearLayout
            android:id="@+id/options_footer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.2"
            >
            <!-- Buttons previous , next -->
            <ImageButton
                android:id="@+id/btn_backpapelitos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@mipmap/paperleft"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </View>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>